---
import { cva, type VariantProps } from "class-variance-authority";
import type { HTMLAttributes } from "astro/types";
import styles from "./Viewport.module.css";

const cvaVariants = cva(styles.base, {
  variants: {
    variant: {
      mobile: styles.mobile,
      desktop: styles.desktop,
      ["mobile-hidden"]: styles["mobile-hidden"],
      ["desktop-hidden"]: styles["desktop-hidden"],
    },
  },
});

type Props = HTMLAttributes<"div"> & VariantProps<typeof cvaVariants>;

const { class: className = "", variant, ...props } = Astro.props as Props;
---

<div class={cvaVariants({ variant, className })} {...props}>
  <slot />
</div>
