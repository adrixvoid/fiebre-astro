---
import { titleVariants, type PropsTitle } from "./Text.cva";

const {
  as: Element = "h1",
  class: className = "",
  align,
  variant,
  size,
  fontStyle,
  baseline,
  ...props
} = Astro.props as PropsTitle;
---

<Element
  class={titleVariants({
    variant,
    size,
    align,
    fontStyle,
    baseline,
    className,
  })}
  {...props}
>
  <slot />
</Element>
