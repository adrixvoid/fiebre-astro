---
import { cvaVariants, type PropsTitle } from "./Text.cva";

const {
  class: className = "",
  align,
  variant,
  size,
  as: Element = "h1",
  fontStyle,
  ...props
} = Astro.props as PropsTitle;
---

<Element
  class={cvaVariants({ variant, size, align, fontStyle, className })}
  {...props}
>
  <slot />
</Element>
