---
import { textVariants, type PropsParagraph } from "./Text.cva.ts";

const {
  class: className = "",
  align,
  size,
  bold,
  as: Component = "p",
  fontStyle,
  ...props
} = Astro.props as PropsParagraph;
---

<Component
  class={textVariants({ size, align, bold, fontStyle, className })}
  {...props}
>
  <slot />
</Component>
