<style>
  .rainbow {
    --color-0: #ff4dd5;
    --color-1: #6792ff;
    --color-2: #ddff83;
    --color-3: #2667c6;
    --color-4: #bc99ff;
    --color-5: #f9c2f6;
    --color-6: #ffa9f7;
    --color-7: #f98cf4;
  }

  .st0 {
    fill: hsl(314, 60%, 39%);
    animation: magentaAnimation 500ms forwards ease-in;
    animation-delay: 250ms;
  }

  .st1 {
    fill: hsl(76, 63%, 35%);
    animation: yellowAnimation 500ms forwards ease-in;
    animation-delay: 300ms;
  }

  .st2 {
    fill: hsl(223, 61%, 41%);
    animation: lightBlueAnimation 500ms forwards ease-in;
    animation-delay: 350ms;
  }

  .st3 {
    fill: hsl(216, 65%, 30%);
    animation: blueAnimation 500ms forwards ease-in;
    animation-delay: 400ms;
  }

  .st4 {
    fill: hsl(261, 44%, 33%);
    animation: violetAnimation 500ms forwards ease-in;
    animation-delay: 400ms;
  }

  .st6 {
    fill: hsl(303, 49%, 35%);
    animation: cloudAnimation1 450ms forwards ease-in;
    animation-delay: 800ms;
  }

  .st7 {
    fill: hsl(306, 55%, 41%);
    animation: cloudAnimation2 450ms forwards ease-in;
    animation-delay: 800ms;
  }

  .st8 {
    fill: hsl(303, 46%, 50%);
    animation: cloudAnimation3 450ms forwards ease-in;
    animation-delay: 800ms;
  }

  .st9 {
    transform: translateY(100%);
    animation: moonAnimation 450ms forwards ease-in;
    animation-delay: 700ms;
  }

  /* .rainbow:hover .st9 {
  animation-name: moonAnimationReverse;
  animation-delay: revert;
  animation-duration: 500ms;
} */

  @keyframes magentaAnimation {
    from {
      fill: hsl(314, 60%, 39%);
    }

    to {
      fill: hsl(314, 100%, 65%);
    }
  }

  @keyframes yellowAnimation {
    from {
      fill: hsl(76, 63%, 35%);
    }

    to {
      fill: hsl(76, 100%, 76%);
    }
  }

  @keyframes lightBlueAnimation {
    from {
      fill: hsl(223, 61%, 41%);
    }

    to {
      fill: hsl(223, 100%, 70%);
    }
  }

  @keyframes blueAnimation {
    from {
      fill: hsl(216, 65%, 30%);
    }

    to {
      fill: hsl(216, 68%, 46%);
    }
  }

  @keyframes violetAnimation {
    from {
      fill: hsl(261, 44%, 33%);
    }

    to {
      fill: hsl(261, 100%, 80%);
    }
  }

  @keyframes cloudAnimation1 {
    from {
      fill: hsl(303, 49%, 35%);
    }

    to {
      fill: hsl(303, 82%, 87%);
    }
  }

  @keyframes cloudAnimationReverse1 {
    from {
      fill: hsl(303, 82%, 87%);
    }

    to {
      fill: hsl(303, 49%, 35%);
    }
  }

  @keyframes cloudAnimation2 {
    from {
      fill: hsl(306, 55%, 41%);
    }

    to {
      fill: hsl(306, 100%, 83%);
    }
  }

  @keyframes cloudAnimationReverse2 {
    from {
      fill: hsl(306, 100%, 83%);
    }

    to {
      fill: hsl(306, 55%, 41%);
    }
  }

  @keyframes cloudAnimation3 {
    from {
      fill: hsl(303, 46%, 50%);
    }

    to {
      fill: hsl(303, 90%, 76%);
    }
  }

  @keyframes cloudAnimationReverse3 {
    from {
      fill: hsl(303, 90%, 76%);
    }

    to {
      fill: hsl(303, 46%, 50%);
    }
  }

  @keyframes moonAnimation {
    to {
      transform: translateY(0);
    }
  }

  @keyframes moonAnimationReverse {
    from {
      transform: translateY(0);
    }

    to {
      transform: translateY(100%);
    }
  }
</style>
