---
import type { HTMLAttributes } from "astro/types";
import styles from "./Card.module.css";

export type BackgroundProps = HTMLAttributes<"div"> & {
  as?: "div" | "article";
};

const {
  as: Element = "div",
  class: className = "",
  style = {},
  ...props
} = Astro.props as BackgroundProps;
---

<Element class:list={[styles.card, className]}>
  <slot />
</Element>
