---
import type { HTMLAttributes } from "astro/types";
import styles from "./Card.module.css";

export type BackgroundProps = HTMLAttributes<"div"> & {
  as?: "div" | "article";
  shadow: boolean;
};

const {
  as: Element = "div",
  class: className = "",
  shadow = false,
  ...props
} = Astro.props as BackgroundProps;
---

<Element
  class:list={[styles.card, className, { [styles.shadow]: shadow }]}
  {...props}
>
  <slot />
</Element>
