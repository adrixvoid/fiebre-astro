---
import Button from "../ui/button/Button.astro";
import Card, {
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardImage,
  CardTitle,
} from "../ui/card";
import Center from "../ui/center/Center.astro";
import Container from "../ui/container/Container.astro";
import Grid from "../ui/grid/Grid.astro";
import WindowControllers from "../ui/svg/WindowControllers.astro";
import Title from "../ui/text/Title.astro";

import styles from "./Resources.module.css";
---

<div class={styles.descargables}>
  <img
    class={styles["palm-grid"]}
    src="assets/palm-grid.svg"
    aria-hidden="true"
  />
  <Container>
    <Center variant="all">
      <Title
        id="descargables"
        class={styles.title}
        as="h2"
        variant="primary"
        align="center">Descargables Gratis</Title
      >
    </Center>
    <Grid>
      <Card as="article" class={styles.card} shadow={true}>
        <CardHeader class={styles.cardCustomHeader} aria-hidden="true">
          <WindowControllers class={styles.fakeWindowController} />
          <Center>
            <CardImage src="/home/descargable-planner-para-feed.png" />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="abrir-plantilla" aria-describedby="descargables"
            >Planner para feed</CardTitle
          >
          <CardDescription
            >Planifica el diseño de tu perfil y tu feed de Instagram en Canva.</CardDescription
          >
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              href="https://www.canva.com/design/DAF2N-X_lG4/-lb4UI4eotzmP-xbAEOBGw/view?utm_content=DAF2N-X_lG4&utm_campaign=designshare&utm_medium=link&utm_source=publishsharelink&mode=preview"
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="abrir-plantilla"
            >
              Abrir plantilla
            </Button>
          </Center>
        </CardFooter>
      </Card>
      <Card as="article" class={styles.card} shadow={true}>
        <CardHeader class={styles.cardCustomHeader} aria-hidden="true">
          <WindowControllers class={styles.fakeWindowController} />
          <Center>
            <CardImage src="/home/descargable-planner-anual.png" />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="planner-anual">Planner anual</CardTitle>
          <CardDescription
            >Organiza tu negocio y olvídate de los dolores de cabeza.</CardDescription
          >
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              href="https://fiebrediseno.gumroad.com/l/plannersgratis?layout=profile"
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="planner-anual"
            >
              Descargar plantilla
            </Button>
          </Center>
        </CardFooter>
      </Card>
      <Card as="article" class={styles.card} shadow={true}>
        <CardHeader class={styles.cardCustomHeader} aria-hidden="true">
          <WindowControllers class={styles.fakeWindowController} />
          <Center>
            <CardImage
              src="/home/descargable-el-color-en-nuestro-proyecto.png"
            />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="guia-color">Guía de color</CardTitle>
          <CardDescription>
            Si te cuesta elegir los colores ideales para tu negocio, ¡es aquí!
          </CardDescription>
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              href="https://drive.google.com/file/d/1PNN2jx30QAqugTwk-wQEG9Njl4fIPVsa/view?usp=sharing"
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="guia-color"
            >
              Descargar guía
            </Button>
          </Center>
        </CardFooter>
      </Card>
    </Grid>
  </Container>
</div>
