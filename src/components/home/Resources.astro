---
import PalmGrid from "~/components/ui/svg/assets/PalmGrid.astro";
import Button from "../ui/button/Button.astro";
import CardContent from "../ui/card/components/CardContent.astro";
import CardDescription from "../ui/card/components/CardDescription.astro";
import CardFooter from "../ui/card/components/CardFooter.astro";
import CardHeader from "../ui/card/components/CardHeader.astro";
import CardImage from "../ui/card/components/CardImage.astro";
import CardTitle from "../ui/card/components/CardTitle.astro";
import Center from "../ui/center/Center.astro";
import Container from "../ui/container/Container.astro";
import Grid from "../ui/grid/Grid.astro";
import Title from "../ui/text/Title.astro";

import { t } from "~/i18n/translate";
import WindowCard from "../ui/card/components/WindowCard.astro";
import styles from "./Resources.module.css";
---

<div class={styles.descargables}>
  <PalmGrid class={styles["palm-grid"]} aria-hidden={true} />
  <Container>
    <Center variant="all">
      <Title
        id="descargables"
        class={styles.title}
        as="h2"
        variant="primary"
        align="center"
      >
        {t("RESOURCES.TITLE")}
      </Title>
    </Center>
    <Grid>
      <WindowCard as="article" class={styles.card} shadow={true}>
        <CardHeader aria-hidden="true">
          <Center>
            <CardImage aria-hidden="true" src={t("RESOURCES.0.image")} />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="abrir-plantilla" aria-describedby="descargables">
            {t("RESOURCES.0.title")}
          </CardTitle>
          <CardDescription>{t("RESOURCES.0.description")}</CardDescription>
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              asLink
              href={t("RESOURCES.0.link.href")}
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="abrir-plantilla"
            >
              {t("RESOURCES.0.link.title")}
            </Button>
          </Center>
        </CardFooter>
      </WindowCard>
      <WindowCard as="article" class={styles.card} shadow={true}>
        <CardHeader aria-hidden="true">
          <Center>
            <CardImage src={t("RESOURCES.1.image")} />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="planner-anual">{t("RESOURCES.1.title")}</CardTitle>
          <CardDescription>{t("RESOURCES.1.description")}.</CardDescription>
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              asLink
              href={t("RESOURCES.1.link.href")}
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="planner-anual"
            >
              {t("RESOURCES.1.link.title")}
            </Button>
          </Center>
        </CardFooter>
      </WindowCard>
      <WindowCard as="article" class={styles.card} shadow={true}>
        <CardHeader aria-hidden="true">
          <Center>
            <CardImage src={t("RESOURCES.2.image")} />
          </Center>
        </CardHeader>
        <CardContent>
          <CardTitle id="guia-color">{t("RESOURCES.2.title")}</CardTitle>
          <CardDescription>
            {t("RESOURCES.2.description")}
          </CardDescription>
        </CardContent>
        <CardFooter>
          <Center>
            <Button
              asLink
              href={t("RESOURCES.2.link.href")}
              no-referrer="true"
              target="_blank"
              width="full-width"
              size="md"
              aria-describedby="guia-color"
            >
              {t("RESOURCES.2.link.title")}
            </Button>
          </Center>
        </CardFooter>
      </WindowCard>
    </Grid>
  </Container>
</div>
