---
import ElementAsBackground from "~/components/ui/background/AsBackground.astro";
import Center from "~/components/ui/center/Center.astro";
import Viewport from "~/components/ui/viewport/Viewport.astro";

import styles from "./home/MainHero.module.css";
import Rainbow from "./ui/svg/Rainbow.astro";
---

<div class={styles.hero}>
  <div aria-hidden>
    <div class={styles.orbit}>
      <ElementAsBackground>
        <Center variant="all">
          <img
            class={styles.estrella1}
            src="/assets/estrellas.svg"
            aria-hidden
          />
        </Center>
      </ElementAsBackground>
      <ElementAsBackground>
        <Center variant="all">
          <img src="/assets/estrellas2.svg" aria-hidden />
        </Center>
      </ElementAsBackground>
      <ElementAsBackground>
        <Center variant="all">
          <img
            src="/assets/onda-estelar-1.svg"
            aria-hidden
            class={styles.ondaEstelar1}
          />
        </Center>
      </ElementAsBackground>
      <ElementAsBackground>
        <Center variant="all">
          <img
            src="/assets/onda-estelar-2.svg"
            aria-hidden
            class={styles.ondaEstelar2}
          />
        </Center>
      </ElementAsBackground>
      <ElementAsBackground>
        <Center variant="all">
          <img
            src="/assets/onda-estelar-3.svg"
            aria-hidden
            class={styles.ondaEstelar3}
          />
        </Center>
      </ElementAsBackground>
      <ElementAsBackground>
        <img src="/assets/planeta1.svg" aria-hidden class={styles.planeta1} />
        <img src="/assets/planeta2.svg" aria-hidden class={styles.planeta2} />
        <img src="/assets/planeta3.svg" aria-hidden class={styles.planeta3} />
        <img src="/assets/planeta4.svg" aria-hidden class={styles.planeta4} />
        <img src="/assets/planeta5.svg" aria-hidden class={styles.planeta5} />
      </ElementAsBackground>
    </div>
  </div>
  {/* <div class={styles.backdrop} /> */}
  <div class={styles.content}>
    <hgroup>
      <Viewport variant="desktop">
        <h1 class={styles.title}>
          <span class={styles["text-0"]}>Hagamos que la</span>
          <span class={styles.headline}>
            <span>magia</span>
            <span aria-hidden>
              <Rainbow
                src="/assets/rainbow.svg"
                aria-hidden
                class={styles.rainbowSVG}
              />
            </span>
            <span>suceda</span>
          </span>
        </h1>
      </Viewport>
      <Viewport variant="desktop-hidden">
        <span aria-hidden>
          <Rainbow
            src="/assets/rainbow.svg"
            aria-hidden
            class={styles.rainbowSVG}
          />
        </span>
        <h1 class={styles.title}>
          <span class={styles["text-0"]}>Hagamos que la</span>
          <span class={styles.headline}>
            <span class={styles["text-1"]}>magia</span>
            <span class={styles["text-2"]}>suceda</span>
          </span>
        </h1>
      </Viewport>
    </hgroup>
  </div>
</div>
